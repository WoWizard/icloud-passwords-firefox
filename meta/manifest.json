{
  "name": "iCloud Passwords",
  "version": "1.0.2",
  "description": "iCloud Passwords lets you fill passwords from iCloud Keychain when signing in to websites using Firefox.",
  "author": "Aur√©lien Garnier",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./images/logo-16.png",
      "32": "./images/logo-32.png"
    },
    "default_popup": "./popup.html"
  },
  "icons": {
    "16": "./images/logo-16.png",
    "32": "./images/logo-32.png",
    "128": "./images/logo-128.png"
  },
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "optional_permissions": ["tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "password-manager-firefox-extension@apple.com"
    }
  }
}
